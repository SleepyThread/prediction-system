<?xml version="1.0" encoding="UTF-8"?>
<workflow-app xmlns="uri:oozie:workflow:0.4" name="prediction-system-workflow">

    <start to="JoinVehicleAndUsageRate"/>

    <action name="JoinVehicleAndUsageRate">
        <hive xmlns="uri:oozie:hive-action:0.2">
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <job-xml>hive-site.xml</job-xml>
            <configuration>
                <property>
                    <name>mapred.job.queue.name</name>
                    <value>${queueName}</value>
                </property>
                <property>
                    <name>oozie.hive.defaults</name>
                    <value>hive-site.xml</value>
                </property>
            </configuration>
            <script>join-vehicle-and-usage.hql</script>
            <param>user=${user.name}</param>
            <param>location=${inputDir}</param>
            <file>hive-site.xml#hive-site.xml</file>
        </hive>
        <ok to="GenerateServicingEvent"/>
        <error to="error"/>
    </action>

    <action name="GenerateServicingEvent">
        <java>
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <main-class>com.cat.olga.driver.GeneratingOpportunitiesDriver</main-class>
            <java-opts>
                -DinputPath=${inputDir}
                -DoutputPath=${outputDir}
            </java-opts>
            <arg>-libjars</arg>
            <arg>${nameNode}/user/${user.name}/workflow/lib/joda-time-2.3.jar</arg>
        </java>
        <ok to="end"/>
        <error to="error"/>
    </action>

    <end name="end"/>

    <kill name="error">
    <message>
        error message[${wf:errorMessage(wf:lastErrorNode())}]
    </message>
    </kill>

</workflow-app>
